<div>
  <div>
    <p><strong>City</strong></p>
  </div>
  <h3>
    <%= @lockbox_partner.name %><span class="pull-right">$ <%= @lockbox_partner.balance %></span>
  </h3>

  <hr />

  <div class="lockbox-activity">
    <table class="usa-table-borderless">
      <tbody>
        <% @lockbox_partner.historical_actions.each do |action| %>
          <tr>
            <th scope="row"><%= action.eff_date %></th>
            <td><%= action.action_type.humanize %></td>
            <td><%= action.status %></td>
            <td><%= action.support_request&.name_or_alias %></td>
            <td><%= action.amount %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to "New Lockbox Partner User", new_lockbox_partner_user_path(@lockbox_partner) %>
</div>
