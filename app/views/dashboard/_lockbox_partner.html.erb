<div class="lockbox-partner clearfix">
  <div>
    <p>
      <strong>City</strong>
    </p>
  </div>
  <h3>
    <%= lockbox_partner.name %><span class="float-right">$<%= lockbox_partner.balance %></span>
  </h3>

  <div class="lockbox-activity">
    <table class="table table-no-border">
      <thead>
        <tr>
          <th>Date</th>
          <th>Activity</th>
          <th>Status</th>
          <th>Client</th>
          <th>Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% lockbox_partner.historical_actions.each do |action| %>
          <tr>
            <td><%= action.eff_date %></td>
            <td><%= action.action_type.humanize %></td>
            <td><%= action.status %></td>
            <td><%= action.support_request&.name_or_alias %></td>
            <td><%= action.amount %></td>
            <td>
              <% if action.support_request %>
                <%= link_to 'View details ->', support_request_path(action.support_request) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'View Lockbox Partner Details',
              lockbox_partner_path(lockbox_partner),
              class: 'btn btn-primary' %>
</div>