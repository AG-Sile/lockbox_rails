<div class="lockbox-partner clearfix">
  <% if lockbox_partner.reconciliation_needed? %>
    <div class="alert alert-danger container">
      <div class="row">
        <div class="col-1">
          <i class="material-icons md-36">error</i>
        </div>
        <div class="col-8">
          <h4 class="alert-heading">Reconciliation Due</h4>
          <p>It's been <%= days_since_last_reconciliation %> days since the lockbox has been reconciled. Please count the cash in the box and record the total.</p>
        </div>
        <div class="col-3">
          <%= link_to "Reconcile budget", new_lockbox_partner_reconciliation_path(lockbox_partner), class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <p>
      <strong><%= lockbox_partner.city %></strong>
    </p>
  </div>
  <h3>
    <%= lockbox_partner.name %><span class="float-right">$<%= lockbox_partner.balance %></span>
  </h3>

  <div class="lockbox-activity">
    <table class="table table-no-border">
      <thead>
        <tr>
          <th>Date</th>
          <th>Activity</th>
          <th>Status</th>
          <th>Client</th>
          <th>Amount</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% lockbox_partner.historical_actions.each do |action| %>
          <tr>
            <td><%= action.eff_date %></td>
            <td><%= action.action_type.humanize %></td>
            <td><%= action.status %></td>
            <td><%= action.support_request&.name_or_alias %></td>
            <td><%= action.amount %></td>
            <td>
              <% if action.support_request %>
                <%= link_to 'View details ->', support_request_path(action.support_request) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
