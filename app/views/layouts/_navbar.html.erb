<header class="usa-header usa-header-basic" role="banner">
  <div class="usa-nav-container">
    <div class="usa-navbar">
      <div class="usa-logo" id="basic-logo">
        <em class="usa-logo-text">
          <a href="/"
            title="Home"
            aria-label="Home">
            ðŸ’¸ Lockbox
          </a>
        </em>
      </div>
      <button class="usa-menu-btn" aria-label="menu"><%= fa_icon 'bars' %></button>
    </div>
    <nav role="navigation" class="usa-nav">
      <button class="usa-nav-close"><%= fa_icon 'times' %></button>
      <ul class="usa-nav-primary usa-accordion">
        <% if signed_in? %>
          <li>
            <%= link_to(edit_user_registration_path, class: 'usa-nav-link') do %>
              <span>Account</span>
            <% end %>
          </li>
          <li>
            <%= link_to(destroy_user_session_path, method: :delete, class: 'usa-nav-link') do %>
              <span>Sign Out</span>
            <% end %>
          </li>
        <% else %>
          <li>
            <a class="usa-nav-link" href="/users/sign_in">
              <span>Sign In</span>
            </a>
          </li>
        <% end %>
        </li>
      </ul>
    </nav>
  </div>
</header>
